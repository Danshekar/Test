<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:id="@+id/linearlayout_view">
    <android.support.v7.widget.CardView
        android:id="@+id/cardSugar"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp">
        <LinearLayout
            android:id="@+id/linearlayout_cardSugar"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:padding="8dp">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="190dp"
                android:id="@+id/imageView"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#333333"
                android:text="cardSugar"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp" />
            <CheckBox
                android:id="@+id/checkToppingSugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Topping"/>
            <CheckBox
                android:id="@+id/checkFillingSugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filling"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardLemonJuice"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp">
        <LinearLayout
            android:id="@+id/linearlayout_cardLemonJuice"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:padding="8dp">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="190dp"
                android:id="@+id/imageView2"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#333333"
                android:text="cardLemonJuice"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp" />
            <CheckBox
                android:id="@+id/checkToppingLemonJuice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Topping"/>
            <CheckBox
                android:id="@+id/checkFillingLemonJuice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filling"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btnOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order"/>
</LinearLayout>
